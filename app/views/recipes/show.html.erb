<p style="color: green"><%= notice %></p>

<p>
  <%= "Catégorie : #{@recipe.recipe_category.name}" %> |
  <%= "Difficulté : #{@recipe.difficulty}" %> |
  <%= "Préparation : #{pluralize(@cooking_time, 'minute')}" %>
</p>

<%= render @recipe %>

<p>
  <%= "Pour #{pluralize(@servings, 'personne')}" %>
</p>

<h4>Ingrédients</h4>
<p>
  <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
    <%= recipe_ingredient.quantity %>
    <%= recipe_ingredient.unit %>
    <%= recipe_ingredient.name %><br />
  <% end %>
</p>

<!-- TODO:  Render the ustensils -->

<% @recipe.recipe_steps.each_with_index do |step, index| %>
  <p>
    <strong>Étape <%= index + 1 %> :</strong><br />
    <%= step.instructions %>
  </p>
<% end %>

<div>
  <%= link_to "Modifier la recette", edit_recipe_path(@recipe) %> |
  <%= link_to "Retour à l'accueil", recipes_path %>

  <%= button_to "Supprimer la recette", @recipe, method: :delete %>
</div>
