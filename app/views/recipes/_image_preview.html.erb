<div data-controller="previews">
  <%= form.label :image, style: "display: block" %>
  <%= form.file_field :image,
    direct_upload: true,
    data: { previews_target: "input", action: "change->previews#preview" } %>

    <% if recipe.image.attached? %>
      <%= image_tag recipe.image, data: { previews_target: "preview" }, class: "img-responsive" %>
    <% else %>
      <%= image_tag "", data: { previews_target: "preview" }, class: "img-responsive" %>
    <% end %>
</div>
