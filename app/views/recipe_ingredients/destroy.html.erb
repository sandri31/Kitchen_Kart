<%= fields model: @recipe do |form| %>
  <%= form.fields_for :recipe_ingredients, child_index: params[:index] do |recipe_ingredient_form| %>
    <%= turbo_frame_tag "recipe_ingredient_#{recipe_ingredient_form.index}" do %>
      <%= recipe_ingredient_form.hidden_field :id, value: params[:id] %>
      <%= recipe_ingredient_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>
